// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["mongodb"]
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  createdAt DateTime @default(now())
  email     String   @unique
  phone     String   @unique
}

model Rifa {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  name         String
  price        Float
  image        String
  status       String
  isFinished   Boolean @default(false)
  authorId     String
  createdAt    DateTime @default(now())
  winnerNumber Int?
  winnerName String?
  participants Int?
  soldNumbers  Int[]
}

model PaymentIntent {
  id            String   @id @default(auto()) @map("_id") @db.ObjectId
  numbers       Int[]
  createdAt     DateTime @default(now())
  ownerId       String
  rifaId        String
  status        String
  quantity      Int
  transactionId String
  copyPasteCode String
  qrCode        String
  totalValue    Float
  value         Float
}

model Admin {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  createdAt DateTime @default(now())
  name      String
  email     String   @unique
  password  String
}
